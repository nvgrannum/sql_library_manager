extends layout

block content
  h1= title
  p Welcome to #{title}

  form(action="/books/new", method="get")
    input(type='submit', value="Create New Book")

  table(style="width:100%")
    tr
      th Title 
      th Author
      th Genre
      th Year
    each book in books
      tr 
          td 
            a(href=`/books/${book.id}`) #{book.title}
          td=book.author 
          td=book.genre
          td=book.year  
